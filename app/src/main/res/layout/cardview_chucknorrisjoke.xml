<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margins"
    app:cardBackgroundColor="@color/cardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardview_chucknorrisjoke_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/card_title_textsize"
            android:textStyle="bold"
            android:text="@string/card_chucknorris_title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/card_linebreak_padding"
            android:layout_marginBottom="@dimen/card_linebreak_padding"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/cardview_chucknorrisjoke_joke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/card_standard_padding"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/card_paragraph_textsize" />

    </LinearLayout>

</android.support.v7.widget.CardView>