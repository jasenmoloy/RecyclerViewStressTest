<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/cardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardview_imgurimage_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/card_title_textsize"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/card_linebreak_padding"
            android:layout_marginBottom="@dimen/card_linebreak_padding"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/cardview_imgur_imageview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingBottom="@dimen/card_linebreak_padding" />

        <TextView
            android:id="@+id/cardview_imgur_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/card_linebreak_padding"
            android:textSize="@dimen/card_paragraph_textsize"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

</android.support.v7.widget.CardView>